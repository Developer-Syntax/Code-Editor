<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".MainActivity">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@color/toolbar_background"
                android:elevation="0dp"
                app:navigationIcon="@drawable/ic_files"
                app:navigationIconTint="@color/on_surface"
                app:title="Code Editor"
                app:titleTextAppearance="@style/TextAppearance.Material3.TitleMedium"
                app:titleTextColor="@color/on_surface"
                app:menu="@menu/menu_main" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/border_color" />

            <HorizontalScrollView
                android:id="@+id/tabsContainer"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:background="@color/tabs_background"
                android:scrollbars="none"
                android:visibility="gone">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvTabs"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal" />

            </HorizontalScrollView>

            <com.codeeditor.android.view.SymbolToolbarView
                android:id="@+id/symbolToolbar"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:background="@color/symbol_toolbar_background"
                android:visibility="gone" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <com.codeeditor.android.view.CodeEditorView
                        android:id="@+id/codeEditor"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/autocompletePanel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        app:cardBackgroundColor="@color/autocomplete_background"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="8dp"
                        app:strokeColor="@color/autocomplete_border"
                        app:strokeWidth="1dp"
                        android:layout_marginHorizontal="8dp"
                        android:layout_marginBottom="4dp">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rvAutocomplete"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:maxHeight="200dp"
                            android:clipToPadding="false"
                            android:paddingVertical="4dp" />

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <ScrollView
                    android:id="@+id/welcomePanel"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/editor_background"
                    android:fillViewport="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        android:padding="32dp">

                        <ImageView
                            android:layout_width="72dp"
                            android:layout_height="72dp"
                            android:layout_marginTop="48dp"
                            android:src="@drawable/ic_files"
                            android:alpha="0.6"
                            app:tint="@color/primary" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="24dp"
                            android:text="@string/welcome_title"
                            android:textAlignment="center"
                            android:textColor="@color/on_surface"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:letterSpacing="-0.02" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:layout_marginHorizontal="24dp"
                            android:text="@string/welcome_message"
                            android:textAlignment="center"
                            android:textColor="@color/secondary_text"
                            android:textSize="15sp"
                            android:lineSpacingMultiplier="1.3" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="32dp"
                            android:orientation="horizontal"
                            android:gravity="center">

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btnOpenFile"
                                style="@style/Theme.CodeEditor.Button.Secondary"
                                android:layout_width="wrap_content"
                                android:layout_height="44dp"
                                android:text="@string/open_file"
                                android:textAllCaps="false"
                                app:icon="@drawable/ic_folder_open"
                                app:iconGravity="textStart"
                                app:iconPadding="8dp" />

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btnConnectGitHub"
                                style="@style/Theme.CodeEditor.Button.Primary"
                                android:layout_width="wrap_content"
                                android:layout_height="44dp"
                                android:layout_marginStart="12dp"
                                android:text="@string/connect_github"
                                android:textAllCaps="false"
                                app:icon="@drawable/ic_github"
                                app:iconGravity="textStart"
                                app:iconPadding="8dp" />

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="40dp"
                            android:layout_marginHorizontal="24dp"
                            android:background="@color/divider" />

                        <TextView
                            android:id="@+id/tvRecentFilesTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="24dp"
                            android:text="@string/recent_files"
                            android:textColor="@color/secondary_text"
                            android:textSize="13sp"
                            android:textAllCaps="true"
                            android:letterSpacing="0.1"
                            android:visibility="gone" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rvRecentFiles"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:nestedScrollingEnabled="false"
                            android:visibility="gone" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnClearRecent"
                            style="@style/Widget.Material3.Button.TextButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="@string/clear_recent"
                            android:textColor="@color/secondary_text"
                            android:visibility="gone" />

                    </LinearLayout>

                </ScrollView>

            </FrameLayout>

            <LinearLayout
                android:id="@+id/statusBar"
                android:layout_width="match_parent"
                android:layout_height="22dp"
                android:background="@color/status_bar"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingHorizontal="12dp">

                <ImageView
                    android:id="@+id/ivGitStatus"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@drawable/ic_branch"
                    android:visibility="gone"
                    app:tint="@color/status_text" />

                <TextView
                    android:id="@+id/tvBranchStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:textColor="@color/status_text"
                    android:textSize="11sp"
                    android:visibility="gone" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/tvPosition"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ln 1, Col 1"
                    android:textColor="@color/status_text"
                    android:textSize="11sp" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="10dp"
                    android:layout_marginHorizontal="10dp"
                    android:background="#50FFFFFF" />

                <TextView
                    android:id="@+id/tvLanguage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Plain Text"
                    android:textColor="@color/status_text"
                    android:textSize="11sp" />

            </LinearLayout>

        </LinearLayout>

        <com.codeeditor.android.view.QuickActionsView
            android:id="@+id/fabQuickActions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="16dp"
            android:layout_marginBottom="40dp"
            android:visibility="gone"
            app:backgroundTint="@color/fab_background"
            app:fabSize="normal"
            app:srcCompat="@drawable/ic_quick_action"
            app:tint="@color/fab_icon"
            app:rippleColor="@color/fab_ripple" />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigationView"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/sidebar"
        android:fitsSystemWindows="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/sidebar_section"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingHorizontal="16dp"
                android:paddingVertical="14dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/ivAvatar"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/ic_account"
                    android:visibility="gone" />

                <FrameLayout
                    android:id="@+id/avatarPlaceholderContainer"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:background="@drawable/bg_branch">

                    <ImageView
                        android:id="@+id/ivAvatarPlaceholder"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_github"
                        app:tint="@color/on_surface" />

                </FrameLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvUsername"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/sign_in_github"
                        android:textColor="@color/on_surface"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvLoginStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="@string/tap_to_sign_in"
                        android:textColor="@color/secondary_text"
                        android:textSize="12sp" />

                </LinearLayout>

                <ImageButton
                    android:id="@+id/btnLogout"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Logout"
                    android:src="@drawable/ic_logout"
                    android:visibility="gone"
                    app:tint="@color/secondary_text" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider" />

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tabLayout"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@color/sidebar"
                app:tabGravity="fill"
                app:tabIndicatorColor="@color/primary"
                app:tabIndicatorHeight="2dp"
                app:tabMode="fixed"
                app:tabSelectedTextColor="@color/on_surface"
                app:tabTextColor="@color/secondary_text"
                app:tabRippleColor="@color/ripple_color"
                app:tabIconTint="@color/secondary_text">

                <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:icon="@drawable/ic_files"
                    android:text="@string/files" />

                <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:icon="@drawable/ic_repo"
                    android:text="@string/repos" />

            </com.google.android.material.tabs.TabLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/explorerPanel"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/repoHeader"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/sidebar_section"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingHorizontal="12dp"
                        android:paddingVertical="10dp"
                        android:visibility="gone">

                        <ImageView
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            android:src="@drawable/ic_repo"
                            app:tint="@color/secondary_text" />

                        <TextView
                            android:id="@+id/tvRepoName"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_weight="1"
                            android:ellipsize="middle"
                            android:singleLine="true"
                            android:textColor="@color/on_surface"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/tvBranch"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_branch"
                            android:paddingHorizontal="8dp"
                            android:paddingVertical="3dp"
                            android:textColor="@color/branch_text"
                            android:textSize="11sp" />

                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvFileTree"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:clipToPadding="false"
                        android:paddingVertical="8dp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/reposPanel"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Theme.CodeEditor.TextInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="12dp"
                        app:hintEnabled="false"
                        app:startIconDrawable="@drawable/ic_search"
                        app:startIconTint="@color/hint_color"
                        app:boxStrokeWidth="1dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etRepoSearch"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:hint="@string/search_repos"
                            android:inputType="text"
                            android:textColor="@color/on_surface"
                            android:textColorHint="@color/hint_color"
                            android:textSize="14sp" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvRepos"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:clipToPadding="false"
                        android:paddingBottom="16dp" />

                    <LinearLayout
                        android:id="@+id/loginPrompt"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="32dp"
                        android:visibility="gone">

                        <ImageView
                            android:layout_width="56dp"
                            android:layout_height="56dp"
                            android:src="@drawable/ic_github"
                            android:alpha="0.5"
                            app:tint="@color/on_surface" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:text="@string/github_login_prompt"
                            android:textAlignment="center"
                            android:textColor="@color/secondary_text"
                            android:textSize="14sp"
                            android:lineSpacingMultiplier="1.3" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnGitHubLogin"
                            style="@style/Theme.CodeEditor.Button.Primary"
                            android:layout_width="wrap_content"
                            android:layout_height="44dp"
                            android:layout_marginTop="20dp"
                            android:text="@string/sign_in_github"
                            android:textAllCaps="false"
                            app:icon="@drawable/ic_github" />

                    </LinearLayout>

                </LinearLayout>

            </FrameLayout>

        </LinearLayout>

    </com.google.android.material.navigation.NavigationView>

</androidx.drawerlayout.widget.DrawerLayout>
