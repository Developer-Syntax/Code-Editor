<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.CodeEditor" parent="Theme.Material3.Dark.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_variant</item>
        <item name="android:colorBackground">@color/background</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorError">@color/error</item>
        <item name="colorOnPrimary">@color/on_primary</item>
        <item name="colorOnSecondary">@color/on_secondary</item>
        <item name="colorOnBackground">@color/on_background</item>
        <item name="colorOnSurface">@color/on_surface</item>
        <item name="colorOnError">@color/on_error</item>
        <item name="android:statusBarColor">@color/activity_bar</item>
        <item name="android:navigationBarColor">@color/activity_bar</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">false</item>
    </style>
    
    <style name="Theme.CodeEditor.Toolbar" parent="Widget.Material3.Toolbar">
        <item name="android:background">@color/toolbar_background</item>
        <item name="titleTextColor">@color/on_surface</item>
        <item name="subtitleTextColor">@color/secondary_text</item>
    </style>
    
    <style name="Theme.CodeEditor.Button.Primary" parent="Widget.Material3.Button">
        <item name="android:backgroundTint">@color/button_primary</item>
        <item name="android:textColor">@color/on_primary</item>
        <item name="iconTint">@color/on_primary</item>
        <item name="cornerRadius">8dp</item>
    </style>
    
    <style name="Theme.CodeEditor.Button.Secondary" parent="Widget.Material3.Button.OutlinedButton">
        <item name="strokeColor">@color/border_color</item>
        <item name="android:textColor">@color/on_surface</item>
        <item name="iconTint">@color/on_surface</item>
        <item name="cornerRadius">8dp</item>
    </style>
    
    <style name="Theme.CodeEditor.Card" parent="Widget.Material3.CardView.Filled">
        <item name="cardBackgroundColor">@color/card_background</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">0dp</item>
        <item name="strokeColor">@color/card_border</item>
        <item name="strokeWidth">1dp</item>
    </style>
    
    <style name="Theme.CodeEditor.TextInput" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">@color/input_background</item>
        <item name="boxStrokeColor">@color/input_border</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="hintTextColor">@color/hint_color</item>
    </style>
    
    <style name="Theme.CodeEditor.Tab" parent="Widget.Material3.TabLayout">
        <item name="tabBackground">@color/tabs_background</item>
        <item name="tabIndicatorColor">@color/tab_indicator</item>
        <item name="tabSelectedTextColor">@color/tab_text</item>
        <item name="tabTextColor">@color/tab_text_inactive</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabRippleColor">@color/ripple_color</item>
    </style>
</resources>
